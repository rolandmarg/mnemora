{
  "name": "mnemora",
  "version": "1.0.2",
  "description": "Bot that fetches Google Calendar birthdays and sends WhatsApp notifications",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "delete-all-events": "tsx src/scripts/delete-all-events.ts",
    "install-cron": "./scripts/install-cron.sh",
    "uninstall-cron": "./scripts/uninstall-cron.sh",
    "type-check": "tsc --noEmit",
    "lint": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts",
    "lint:fix": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:lambda": "./scripts/build-lambda.sh",
    "package:lambda": "./scripts/package-lambda.sh",
    "deploy": "./scripts/deploy.sh",
    "deploy:lambda": "./scripts/deploy.sh",
    "deploy:force": "rm -rf .aws-sam && ./scripts/deploy.sh --force-upload",
    "invoke:local": "sam local invoke BirthdayBotFunction --event events/event.json",
    "invoke:lambda": "aws lambda invoke --function-name mnemora-birthday-bot-prod --payload '{}' /dev/stdout | cat",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release:version": "./scripts/release.sh version"
  },
  "keywords": [
    "calendar",
    "birthday",
    "whatsapp",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=24.0.0",
    "yarn": ">=1.22.0"
  },
  "_deploymentRequirements": {
    "aws-sam-cli": ">=1.148.0",
    "note": "SAM CLI 1.148.0+ required for nodejs24.x runtime support. Checked automatically in deploy.sh"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.936.0",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/client-sns": "^3.936.0",
    "@whiskeysockets/baileys": "^6.7.21",
    "@aws-lambda-powertools/tracer": "^2.29.0",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "googleapis": "^166.0.0",
    "pino": "^10.1.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  }
}
