{
  "name": "mnemora",
  "version": "1.0.0",
  "description": "Bot that fetches Google Calendar birthdays and sends WhatsApp notifications",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "delete-events": "tsx src/scripts/delete-events.ts",
    "get-todays-birthdays": "tsx src/scripts/get-todays-birthdays.ts",
    "get-monthly-digest": "tsx src/scripts/get-monthly-digest.ts",
    "get-todays-birthdays-with-digest": "tsx src/scripts/get-todays-birthdays-with-digest.ts",
    "get-all-birthdays": "tsx src/scripts/get-all-birthdays.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts",
    "lint:fix": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "calendar",
    "birthday",
    "whatsapp",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0",
    "node-cron": "^3.0.3",
    "pino": "^10.1.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
