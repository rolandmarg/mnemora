{
  "name": "mnemora",
  "version": "1.0.0",
  "description": "Bot that fetches Google Calendar birthdays and sends WhatsApp notifications",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "add-birthday": "tsx src/scripts/add-birthday.ts",
    "check-all-events": "tsx src/scripts/check-all-events.ts",
    "delete-events": "tsx src/scripts/delete-events.ts",
    "import-birthdays-from-sheets": "tsx src/scripts/import-birthdays-from-sheets.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts",
    "lint:fix": "eslint --cache --cache-location .eslintcache --max-warnings 0 src/**/*.ts --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "calendar",
    "birthday",
    "whatsapp",
    "bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "googleapis": "^144.0.0",
    "node-cron": "^3.0.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  }
}
